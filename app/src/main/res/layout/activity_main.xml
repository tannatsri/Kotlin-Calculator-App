<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1d1f1d"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/inputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/outputText"
        android:gravity="end"
        android:paddingEnd="10dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="23sp"

        >
    </TextView>

    <TextView
        android:id="@+id/outputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll1"
        android:gravity="end"
        android:paddingEnd="10dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="32sp">
    </TextView>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">






        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >



            <ImageView
                android:id="@+id/btn_ac"
                android:layout_margin="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"

                android:background="@drawable/btn_ac">

            </ImageView>
            <ImageView
                android:id="@+id/btn_openBracket"
                android:layout_margin="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_start_bracket">

            </ImageView>
            <ImageView
                android:id="@+id/btn_closedBracket"
                android:layout_margin="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_end_bracket">

            </ImageView>
            <ImageView
                android:id="@+id/btn_divide"
                android:layout_margin="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_divide">

            </ImageView>
        </LinearLayout>
        <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >



        <ImageView
            android:id="@+id/btn_seven"
            android:layout_margin="10dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/btn_7">

        </ImageView>
        <ImageView
            android:id="@+id/btn_eight"
            android:layout_margin="10dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/btn_8">

        </ImageView>
        <ImageView
            android:id="@+id/btn_nine"
            android:layout_margin="10dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/btn_9">

        </ImageView>
        <ImageView
            android:id="@+id/btn_multiply"
            android:layout_margin="10dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/btn_multiplication">

        </ImageView>
    </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >



            <ImageView
                android:id="@+id/btn_four"
                android:layout_margin="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_4">

            </ImageView>
            <ImageView
                android:id="@+id/btn_five"
                android:layout_margin="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_5">

            </ImageView>
            <ImageView
                android:id="@+id/btn_six"
                android:layout_margin="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_6">

            </ImageView>
            <ImageView
                android:id="@+id/btn_minus"
                android:layout_margin="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_minus">

            </ImageView>
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >



            <ImageView
                android:id="@+id/btn_one"
                android:layout_margin="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_1">

            </ImageView>
            <ImageView
                android:id="@+id/btn_two"
                android:layout_margin="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_2">

            </ImageView>
            <ImageView
                android:id="@+id/btn_three"
                android:layout_margin="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_3">

            </ImageView>
            <ImageView
                android:id="@+id/btn_add"
                android:layout_margin="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_plus">

            </ImageView>
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >



            <ImageView

                android:layout_margin="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_0"
                android:visibility="invisible"
                >

            </ImageView>
            <ImageView
                android:id="@+id/btn_zero"
                android:layout_margin="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_0">

            </ImageView>
            <ImageView
                android:id="@+id/btn_dot"
                android:layout_margin="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_dot">

            </ImageView>
            <ImageView
                android:id="@+id/btn_equal"
                android:layout_margin="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_equal">

            </ImageView>
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>